<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/launch_bg2"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="-70dp"
        android:layout_marginEnd="-100dp"
        android:rotation="180"
        app:srcCompat="@drawable/circle1" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="600dp"
        android:layout_height="600dp"
        android:layout_marginStart="-100dp"
        android:layout_marginTop="680dp"
        android:layout_marginEnd="-60dp"
        android:layout_marginBottom="-420dp"
        android:rotation="0"
        app:srcCompat="@drawable/circle1" />


    <ImageView
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo" />


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"

        android:layout_marginBottom="20dp"
        android:background="@drawable/box1"
        android:elevation="30dp"
        android:gravity="center"
        android:layoutAnimation="@anim/item_layout_anim"
        android:orientation="vertical"
        android:padding="20dp">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            app:lottie_rawRes="@raw/profileanim"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tview"
            android:gravity="center"
            android:stretchColumns="2">

            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:fontFamily="@font/trebuc"
                    android:text="Name :"/>
                <TextView
                    android:id="@+id/namePrf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box2"
                    android:fontFamily="@font/trebuc"
                    android:layout_span="3"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"/>
            </TableRow>
            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/trebuc"
                    android:padding="10dp"
                    android:text="Email :"/>
                <TextView
                    android:id="@+id/emailPrf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/trebuc"
                    android:background="@drawable/box2"
                    android:layout_marginEnd="10dp"
                    android:layout_span="3"
                    android:padding="10dp"/>
            </TableRow>
            <TableRow
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/trebuc"
                    android:padding="10dp"
                    android:text="Points :"/>
                <TextView
                    android:id="@+id/pointPrf"
                    android:layout_width="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/trebuc"
                    android:background="@drawable/box2"
                    android:layout_span="3"
                    android:padding="10dp"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>


</RelativeLayout>