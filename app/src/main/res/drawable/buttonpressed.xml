<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/circletop" /> <!-- Change this color to the desired border color when pressed -->
            <stroke android:color="#000000" android:width="2dp" /> <!-- Border color and width -->
            <corners android:radius="30dp" /> <!-- Rounded corners (optional) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >

        <solid android:color="@color/box" />
        <corners android:radius="35dp" />
        <stroke android:width="3dp"
            android:color="@color/circletop"/>
        </shape>
    </item>
</selector>
