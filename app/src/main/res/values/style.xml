<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ttext</item>
        <item name="android:background">@drawable/box3</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EditText">
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ttext</item>
        <item name="android:background">@drawable/box2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="TextView">
        <item name="android:fontFamily">@font/trebuc</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ttext</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="Dialog">
        <item name="android:color">#F6F6F6</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
</resources>